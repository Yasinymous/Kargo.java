<fx:root prefHeight="600.0" prefWidth="900.0" styleClass="main" stylesheets="@../CSS/giris.css" type="HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="700.0" prefWidth="350.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="460.0">
               <children>
                  <StackPane prefHeight="125.0" prefWidth="300.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="275.0" pickOnBounds="true">
                           <image>
                              <Image url="@../Image/Logo/loginlogo1.jpg" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
                  <VBox prefHeight="78.0" prefWidth="350.0">
                     <children>
                        <Label prefHeight="25.0" prefWidth="75.0" text="User Name">
                           <VBox.margin>
                              <Insets left="40.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="username" prefHeight="35.0" prefWidth="250.0" promptText="User Name">
                           <VBox.margin>
                              <Insets left="40.0" right="40.0" />
                           </VBox.margin>
                        </TextField>
                        <Label prefHeight="25.0" prefWidth="75.0" text="Password">
                           <VBox.margin>
                              <Insets left="40.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <PasswordField fx:id="password" prefHeight="35.0" prefWidth="250.0" promptText="Password">
                           <VBox.margin>
                              <Insets left="40.0" right="40.0" />
                           </VBox.margin>
                        </PasswordField>
                        <Button id="sale" mnemonicParsing="false" onAction="#login" prefHeight="42.0" prefWidth="293.0" text="Login" textFill="WHITE">
                           <VBox.margin>
                              <Insets left="80.0" right="80.0" top="20.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <Label fx:id="msg" prefHeight="29.0" prefWidth="93.0">
               <VBox.margin>
                  <Insets left="140.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ImageView fitHeight="203.0" fitWidth="350.0" nodeOrientation="INHERIT" pickOnBounds="true">
               <image>
                  <Image url="@../Image/Logo/logindestek.jpg" />
               </image>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </ImageView>
         </children>
      </VBox>
      <AnchorPane maxHeight="-Infinity" styleClass="loginborder" HBox.hgrow="ALWAYS">
         <children>
            <ImageView fitHeight="600.0" fitWidth="550.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <image>
                  <Image url="@../Image/Background/login.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
